---
import { SEO } from "astro-seo";
import AppStyles from '../components/styles/app.astro'
import FontsStyles from '../components/styles/fonts.astro'
import ResetStyles from '../components/styles/reset.astro'
import ScrollbarStyles from '../components/styles/scrollbar.astro'
---

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

	<SEO
		title="MarioMH | Desarrollador JavaScript"
		description="MarioMH es un desarrollador Full Stack especializado en JavaScript."
		openGraph={{
			basic: {
				title: "MarioMH desarrollador JavaScript",
				type: "website",
				image: "/og/mariomh.png",
			}
		}}
		twitter={{
			creator: "@MarioMH8"
		}}
	/>
	<link rel="sitemap" href="/sitemap-index.xml">

	<meta name="theme-color" content="#fdfff5" media="(prefers-color-scheme: light)">
	<meta name="theme-color" content="#001B16" media="(prefers-color-scheme: dark)">

	<script src="/src/pwa.ts"></script>

	<AppStyles/>
	<FontsStyles/>
	<ResetStyles/>
	<ScrollbarStyles/>
</head>
<body class="no-scrollbar">
<main>
	<slot/>
</main>
</body>
</html>
