---
import BaseLayout from '../layouts/base.astro';
---

<BaseLayout>
	<section>
		<img
			src="favicon.svg"
			alt="MarioMH icon"
			height="150"
			width="150" />
		<h1>Mario Men&eacute;ndez <br/>Hidalgo</h1>
	</section>
</BaseLayout>

<style>
	section {
		width: 100%;
		height: 100svh;
		display: flex;
		flex-flow: row;
		align-items: center;
		justify-content: center;
		gap: 1rem;
	}

	h1 {
		width: fit-content;
		font-size: var(--size-xl);
	}

	img {
		width: calc( var(--size-xl) * 4.5);
		height: calc( var(--size-xl) * 4.5);
	}
</style>
