<style is:global>
    /* ===== Custom Scroll Bar ===== */
    /* width */
    ::-webkit-scrollbar {
        width: 8px;
    }
    /* Track */
    ::-webkit-scrollbar-track {
        background: var(--color-background);
    }
    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: var(--color-scroll-handle);
		border-radius: 6px;
    }
    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
        background: var(--color-scroll-handle-hover);
    }
</style>
