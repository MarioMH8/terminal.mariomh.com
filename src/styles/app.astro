<style is:global>
	:root {
		--font-family-primary: 'IBM Plex Mono', monospace, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";

		--font-weight-base: 500;

        --size-sm: clamp(0.7rem, 0.26vw + 0.63rem, 0.84rem);
        --size-base: clamp(0.88rem, 0.45vw + 0.76rem, 1.13rem);

        --color-text-100: #64748b;
        --color-text-200: #475569;
        --color-text-300: #334155;

        --color-background: #fdfff5;
        --color-foreground: var(--color-text-100);
        --color-primary: #83AC2A;
        --color-primary-200: #648e0a;
        --color-secondary: #FF9D00;
        --color-scroll-handle: var(--color-primary);
        --color-scroll-handle-hover: var(--color-primary-200);
	}

	@media (prefers-color-scheme: dark) {

		:root {

            --color-text-100: #b4bec8;
            --color-text-200: #87919b;
            --color-text-300: #78828c;

            --color-background: #001B16;
		}
	}

	body {
		background-color: var(--color-background);
		font-weight: var(--font-weight-base);
		font-size: var(--size-base);
		font-family: var(--font-family-primary);
		color: var(--color-foreground);

		-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
		-webkit-touch-callout: none;
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
		user-select: none;
	}

    *, ::before, ::after {
        border-width: 0;
        border-style: solid;
        border-color: currentColor;
    }

    p {
        margin: 0;
    }

    input[type=text] {
        background-color: var(--color-background);
        color: var(--color-text-100);
        caret-color: var(--color-primary);
    }

    input[type=text]:focus-visible {
        outline: none;
    }

	.text-200 {
		color: var(--color-text-200);
	}

    .link {
        display: inline-block;
        color: var(--color-secondary);
        text-decoration: none;
        line-height: 1.5rem;
        white-space: nowrap;
        border-bottom: 2px dashed var(--color-secondary);
    }

    .link:hover {
        border-bottom-style: solid;
    }

    .sr-only {
        position: absolute;
        left: -10000px;
        top: auto;
        width: 1px;
        height: 1px;
        overflow: hidden;
    }

</style>
