<style is:global>
    body {
		--font-family-primary: 'IBM Plex Mono', monospace, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";

		--font-weight-base: 500;

        --size-sm: clamp(0.7rem, 0.26vw + 0.63rem, 0.84rem);
        --size-base: clamp(0.88rem, 0.45vw + 0.76rem, 1.13rem);

        --color-text-100: #64748b;
        --color-text-200: #475569;
        --color-text-300: #334155;

        --color-background: #fdfff5;
        --color-foreground: var(--color-text-100);
        --color-primary: #83AC2A;
        --color-primary-200: #648e0a;
        --color-secondary: #FF9D00;
        --color-scroll-handle: var(--color-primary);
        --color-scroll-handle-hover: var(--color-primary-200);
	}

	@media (prefers-color-scheme: dark) {

        body {

            --color-text-100: #b4bec8;
            --color-text-200: #87919b;
            --color-text-300: #78828c;

            --color-background: #001B16;
		}
	}

	body.light {

        --color-text-100: #64748b;
        --color-text-200: #475569;
        --color-text-300: #334155;

        --color-background: #fdfff5;
        --color-foreground: var(--color-text-100);
        --color-primary: #83AC2A;
        --color-primary-200: #648e0a;
        --color-secondary: #FF9D00;
        --color-scroll-handle: var(--color-primary);
        --color-scroll-handle-hover: var(--color-primary-200);
	}

	body.dark {

        --color-text-100: #b4bec8;
        --color-text-200: #87919b;
        --color-text-300: #78828c;

        --color-background: #001B16;
	}

	body.dark-blue {

        --color-text-100: #cbd5e1;
        --color-text-200: #B2BDCC;
        --color-text-300: #64748b;

        --color-background: #1D2A35;
        --color-primary: #05CE91;
        --color-primary-200: rgba(5, 170, 115, 0.7);
        --color-secondary: #FF9D00;
        --color-scroll-handle: #19252E;
        --color-scroll-handle-hover: #162028;
	}

	body.light-gray {

        --color-text-100: #334155;
        --color-text-200: #475569;
        --color-text-300: #64748b;

        --color-background: #EFF3F3;
        --color-primary: #027474;
        --color-primary-200: #006464;
        --color-secondary: #FF9D00;
        --color-scroll-handle:  #C1C1C1;
        --color-scroll-handle-hover:  #AAAAAA;
	}

	body.blue-matrix {

        --color-text-100: #ffffff;
        --color-text-200: #c7c7c7;
        --color-text-300: #76ff9f;

        --color-background: #101116;
        --color-primary: #00ff9c;
        --color-primary-200: rgb(0, 210, 130);
        --color-secondary: #60fdff;
        --color-scroll-handle: #424242;
        --color-scroll-handle-hover: #616161;
	}

	body.espresso {

        --color-text-100: #F7F7F7;
        --color-text-200: #EEEEEE;
        --color-text-300: #5b5b5b;

        --color-background: #323232;
        --color-primary: #E1E48B;
        --color-primary-200: rgb(200, 200, 115);
        --color-secondary: #A5C260;
        --color-scroll-handle: #5b5b5b;
        --color-scroll-handle-hover: #393939;
	}

	body.green-goblin {

        --color-text-100: #01FF00;
        --color-text-200: #04A5B2;
        --color-text-300: #E50101;

        --color-background: #000000;
        --color-primary: #E5E500;
        --color-primary-200: #bebe00;
        --color-secondary: #04A500;
        --color-scroll-handle: #2E2E2E;
        --color-scroll-handle-hover: #414141;
	}

	body.ubuntu {

        --color-text-100: #FFFFFF;
        --color-text-200: #E1E9CC;
        --color-text-300: #CDCDCD;

        --color-background: #2D0922;
        --color-primary: #80D932;
        --color-primary-200: #bebe00;
        --color-secondary: #80D932;
        --color-scroll-handle: #F47845;
        --color-scroll-handle-hover: #E65F31;
	}

    body {
        background-color: var(--color-background);
        font-weight: var(--font-weight-base);
        font-size: var(--size-base);
        font-family: var(--font-family-primary);
        color: var(--color-foreground);

        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    *, ::before, ::after {
        border-width: 0;
        border-style: solid;
        border-color: currentColor;
    }

    p {
        margin: 0;
    }

    input[type=text] {
        background-color: var(--color-background);
        color: var(--color-text-100);
        caret-color: var(--color-primary);
    }

    input[type=text]:focus-visible {
        outline: none;
    }

	.text-200 {
		color: var(--color-text-200);
	}

    .link {
        display: inline-block;
        color: var(--color-secondary);
        text-decoration: none;
        line-height: 1.5rem;
        white-space: nowrap;
        border-bottom: 2px dashed var(--color-secondary);
    }

    .link:hover {
        border-bottom-style: solid;
    }

    .sr-only {
        position: absolute;
        left: -10000px;
        top: auto;
        width: 1px;
        height: 1px;
        overflow: hidden;
    }

</style>
