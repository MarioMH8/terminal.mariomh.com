<style is:global>
    /* ===== Custom Scroll Bar ===== */
    /* width */
    ::-webkit-scrollbar {
        width: var(--size-xs);
    }
    /* Track */
    ::-webkit-scrollbar-track {
        background: var(--color-background);
    }
    /* Handle */
    ::-webkit-scrollbar-thumb {
        border-radius: 4px;
        background: var(--color-scroll-handle);
    }
    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
        background: var(--color-scroll-handle-hover);
    }
</style>
